<body>
  <header>
    <h1>Lesson Tracker Dashboard</h1>
  </header>
  <h2>Your Progress Overview</h2>
  <div class="tracker-container" id="trackerContainer">
    <!-- Sections will be injected here -->
  </div>

  <script>
    const lessonData = {
      beginner: [
        { title: "Beginner Lesson 1", lesson: "lesson-beginner-1.html", quiz: "quiz-beginner-1.html", completed: true },
        { title: "Beginner Lesson 2", lesson: "lesson-beginner-2.html", quiz: "quiz-beginner-2.html", completed: true },
        { title: "Beginner Lesson 3", lesson: "lesson-beginner-3.html", quiz: "quiz-beginner-3.html", completed: false },
        { title: "Beginner Lesson 4", lesson: "lesson-beginner-4.html", quiz: null, completed: false }
      ],
      intermediate: [
        { title: "Intermediate Lesson 1", lesson: "lesson-intermediate-1.html", quiz: "quiz-intermediate-1.html", completed: true },
        { title: "Intermediate Lesson 2", lesson: "lesson-intermediate-2.html", quiz: null, completed: false },
        { title: "Intermediate Lesson 3", lesson: "lesson-intermediate-3.html", quiz: null, completed: false }
      ],
      advanced: [
        { title: "Advanced Lesson 1", lesson: "lesson-advanced-1.html", quiz: "quiz-advanced-1.html", completed: false },
        { title: "Advanced Lesson 2", lesson: "lesson-advanced-2.html", quiz: null, completed: false }
      ]
    };

    function renderTracker() {
      const container = document.getElementById('trackerContainer');
      container.innerHTML = "";

      Object.keys(lessonData).forEach(level => {
        const section = document.createElement('div');
        section.className = "level-section";

        const title = document.createElement('div');
        title.className = "level-title";
        title.textContent = level.charAt(0).toUpperCase() + level.slice(1) + " Lessons";
        section.appendChild(title);

        lessonData[level].forEach((lesson, index) => {
          const row = document.createElement('div');
          row.className = "lesson";

          const name = document.createElement('span');
          name.textContent = lesson.title;

          const status = document.createElement('span');
          status.className = "status " + (lesson.completed ? "completed" : "not-started");
          status.textContent = lesson.completed ? "Completed" : "Not Started";

          const actions = document.createElement('span');
          if (!lesson.completed) {
            const lessonBtn = document.createElement('button');
            lessonBtn.textContent = "Go to Lesson";
            lessonBtn.className = "action-btn";
            lessonBtn.onclick = () => window.location.href = lesson.lesson;
            actions.appendChild(lessonBtn);
          } else if (lesson.quiz) {
            const quizBtn = document.createElement('button');
            quizBtn.textContent = "Take Quiz";
            quizBtn.className = "action-btn";
            quizBtn.onclick = () => window.location.href = lesson.quiz;
            actions.appendChild(quizBtn);
          }

          row.appendChild(name);
          row.appendChild(status);
          row.appendChild(actions);
          section.appendChild(row);
        });

        container.appendChild(section);
      });
    }

    renderTracker();
  </script>
</body>
</html>
