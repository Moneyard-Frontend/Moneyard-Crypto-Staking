    }
    h2 {
      text-align: center;
      margin: 20px;
    }
    .tracker-container {
      max-width: 800px;
      margin: auto;
      padding: 20px;
    }
    .level-section {
      background: white;
      border-radius: 8px;
      padding: 15px 20px;
      margin-bottom: 25px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }
    .level-title {
      font-size: 20px;
      margin-bottom: 10px;
      color: #17252a;
    }
    .lesson {
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-top: 1px solid #eee;
      padding: 10px 0;
    }
    .lesson:first-child {
      border-top: none;
    }
    .lesson span {
