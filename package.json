{
  "name": "moneyard-platform",
  "version": "1.0.0",
  "description": "Crypto Staking Platform - Moneyard",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --watchAll --coverage",
    "test:ci": "jest --ci --coverage",
    "migrate": "node db/migrate.js",
    "build": "npm run clean && npm run copy-assets",
    "clean": "rm -rf build/ || true",
    "copy-assets": "mkdir -p build && cp -r public/ build/ && cp server.js build/",
    "heroku-postbuild": "npm install --production && npm run build",
    "lint": "eslint .",
    "prepare": "husky install"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.1.0",
    "html-pdf": "^3.0.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.8",
    "rate-limiter-flexible": "^2.4.1",
    "sqlite3": "^5.1.6",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^16.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageReporters": ["lcov", "text-summary"],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ]
  },
  "cacheDirectories": [
    "node_modules",
    "build"
  ],
  "author": "Moneyard",
  "license": "MIT"
}